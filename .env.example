# ==============================================
# AWS Configuration
# ==============================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_NAME=nfe_db
DB_USER=nfeadmin
DB_PASSWORD=your-secure-password
DB_PORT=5432
DB_SSLMODE=require

# ==============================================
# Frontend Configuration
# ==============================================
FRONTEND_BUCKET_NAME=nfe-frontend-dev-your-account-id
CLOUDFRONT_DOMAIN=your-distribution.cloudfront.net
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id

# ==============================================
# API Gateway Configuration
# ==============================================
API_ESTOQUE_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev/
API_FATURAMENTO_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev/

# ==============================================
# EventBridge Configuration
# ==============================================
EVENT_BUS_NAME=nfe-events-dev

# ==============================================
# Secrets Manager
# ==============================================
DB_SECRET_ARN=arn:aws:secretsmanager:us-east-1:your-account-id:secret:nfe/db/credentials-dev-xxxxx

# ==============================================
# Development
# ==============================================
ENVIRONMENT=dev
LOG_LEVEL=info

# ==============================================
# CORS Configuration
# ==============================================
CORS_ORIGINS=https://your-distribution.cloudfront.net,http://localhost:4200

# ==============================================
# Docker Compose - Desenvolvimento Local
# ==============================================
# PostgreSQL Estoque
POSTGRES_ESTOQUE_DB=estoque
POSTGRES_ESTOQUE_USER=admin
POSTGRES_ESTOQUE_PASSWORD=your-secure-password-here
POSTGRES_ESTOQUE_PORT=5432

# PostgreSQL Faturamento
POSTGRES_FATURAMENTO_DB=faturamento
POSTGRES_FATURAMENTO_USER=admin
POSTGRES_FATURAMENTO_PASSWORD=your-secure-password-here
POSTGRES_FATURAMENTO_PORT=5433

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-secure-password-here
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# Servi√ßos
SERVICO_ESTOQUE_PORT=5001
SERVICO_FATURAMENTO_PORT=5002
WEBAPP_PORT=4200

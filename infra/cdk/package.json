{
  "name": "nfe-infra-cdk",
  "version": "1.0.0",
  "description": "Infraestrutura AWS para Sistema de Emiss√£o NFe",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy:dev": "cdk deploy --all --context env=dev",
    "deploy:prod": "cdk deploy --all --context env=prod --require-approval broadening",
    "destroy:dev": "cdk destroy --all --context env=dev",
    "destroy:prod": "cdk destroy --all --context env=prod",
    "deploy:serverless:dev": "cdk deploy --all --app 'npx ts-node --prefer-ts-exts bin/nfe-infra-serverless.ts' --context env=dev",
    "deploy:serverless:prod": "cdk deploy --all --app 'npx ts-node --prefer-ts-exts bin/nfe-infra-serverless.ts' --context env=prod --require-approval broadening",
    "destroy:serverless:dev": "cdk destroy --all --app 'npx ts-node --prefer-ts-exts bin/nfe-infra-serverless.ts' --context env=dev",
    "synth:serverless": "cdk synth --app 'npx ts-node --prefer-ts-exts bin/nfe-infra-serverless.ts'"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.110.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0"
  }
}
